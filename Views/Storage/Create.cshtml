@model GundamShop.Models.GUNDAM
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<body>
    @using (Html.BeginForm("Create", "Storage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.TenGundam, "Tên Gundam:", htmlAttributes: new { @class = "control-label col-md-2", text = "Tên Gundam" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenGundam, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DonGia, "Đơn Giá:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MoTa, "Mô Tả:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control, @cols = 35, @rows = 3" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    <script>
                        CKEDITOR.replace("MoTa")
                    </script>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HinhMinhHoa, "Hình Minh Họa", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.HinhMinhHoa, null, new { type = "file", @class = "form-control", required = "required" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaCD, "Cấp Độ:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.MaCD, ViewBag.MaCD as SelectList, new { htmlAttributes = new { @class = "dropdown-item" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgaySanXuat, "Ngày Sản Xuất:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgaySanXuat, new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoLuongBan, "Số Lượng Bán:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuongBan, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoLanXem, "Số Lượt Xem:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLanXem, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoLuongConLai, "Số Lượng:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuongConLai, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</body>
