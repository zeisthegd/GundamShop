@using GundamShop.Models
@{
    ViewBag.Title = "ViewCart";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Đơn Giá</th>
                                <th>Số Lượng</th>
                                <th>Tổng Cộng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (Cart cart in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <a href="@Url.Action("Details","GundamShop", new {id=cart.MaGundam})">
                                            <img src="~/Storage/HinhMinhHoa/Gundam/@cart.HinhMinhHoa" width="100" height="100">
                                        </a>
                                        <a href="@Url.Action("Details","GundamShop", new {id=cart.MaGundam})">
                                            <h5>@cart.TenGundam</h5>
                                        </a>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @cart.DonGia VNĐ
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="text" value="@cart.SoLuong">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        @cart.ThanhTien VNĐ
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <span class="icon_close"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="#" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    <a href="#" class="primary-btn cart-btn cart-btn-right">
                        <span class="icon_loading"></span>
                        Cập Nhật Giỏ Hàng
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Tổng Số Lượng <span>@ViewBag.TotalAmount Mẫu</span></li>
                        <li>Tổng Thành Tiền <span>@ViewBag.TotalCost VNĐ</span></li>
                    </ul>
                    <a href="#" class="primary-btn">Tiến Hành Thanh Toán</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
