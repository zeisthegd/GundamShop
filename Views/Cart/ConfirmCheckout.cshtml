@using GundamShop.Models
@{
    ViewBag.Title = "ConfirmCheckout";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Sản Phẩm</th>
                                <th>Đơn Giá</th>
                                <th>Số Lượng</th>
                                <th>Tổng Cộng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Cart cart in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <a href="@Url.Action("Details","GundamShop", new {id=cart.MaGundam})">
                                            <img src="~/Storage/HinhMinhHoa/Gundam/@cart.HinhMinhHoa" width="100" height="100">
                                        </a>
                                        <a href="@Url.Action("Details","GundamShop", new {id=cart.MaGundam})">
                                            <h5>@cart.TenGundam</h5>
                                        </a>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @MoneyHelper.FormatMoney(cart.DonGia)
                                    </td>
                                    <td class="shoping__cart__price">
                                        @cart.SoLuong
                                    </td>
                                    <td class="shoping__cart__total">
                                        @MoneyHelper.FormatMoney(cart.ThanhTien)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="py-5 py-lg-5">
    <div class="container">
        <div class="row">
            <div class="offset-lg-3 col-lg-6 col-md-12 col-12 text-center">
                <img src="../assets/images/bag.svg" alt="" class="img-fluid mb-4">
                <h2>Cảm Ơn Bạn Đã Mua Hàng Tại GundamME</h2>
                <p class="mb-4">
                    Đơn Hàng Của Bạn Đã Được Thanh Toán Và Sẽ Được Giao Cho Bạn Sớm Nhất Có Thể.
                </p>
                <a href="@Url.Action("Index","GundamShop")" class="site-btn">Tiếp Tục Mua Sắm</a>
            </div>
        </div>
    </div>
</div>

